{
    "$schema": "http://json.schemastore.org/tsconfig",

    "extends": "../node_modules/@microsoft/rush-stack-compiler-3.3/includes/tsconfig-base.json",
    "compilerOptions": {
        "outDir": "../../../../lib",
        "rootDirs": [
            "../../../../src/"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "../../../../../../types/*"
            ]
        },
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "types": []
    },
    "include": [
        "../../../../src/**/*.ts",
        "../../../../src/**/*.tsx"
    ],
    "exclude": [
        "../../../../node_modules",
        "../../../../lib"
    ]
}
